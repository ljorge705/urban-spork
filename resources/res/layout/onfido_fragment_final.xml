<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.onfido.android.sdk.capture.ui.widget.ShadowedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/watermarkLayout"
        android:layout_alignParentTop="true"
        style="@style/OnfidoShadowedScrollStyle">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/trademark"
            android:layout_marginStart="@dimen/onfido_message_screen_text_margin_horizontal"
            android:layout_marginEnd="@dimen/onfido_message_screen_text_margin_horizontal">
            <com.onfido.android.sdk.capture.ui.widget.CircularImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/videoConfirmationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:onfidoCircularIcon="@drawable/onfido_ic_thick"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/onfido_outro_title_margin_top"
                android:layout_marginBottom="@dimen/onfido_outro_title_margin_bottom"
                android:text="@string/onfido_outro_title"
                style="@style/OnfidoTextStyle.Title.Large"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/onfido_liveness_info_text_spacing"
                android:text="@string/onfido_outro_body"
                style="@style/OnfidoTextStyle.Body.Compact.Secondary"/>
        </LinearLayout>
    </com.onfido.android.sdk.capture.ui.widget.ShadowedScrollView>
    <com.onfido.android.sdk.capture.ui.widget.OnfidoButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/onfido_button_horizontal_margin"
        android:layout_marginRight="@dimen/onfido_button_horizontal_margin"
        android:layout_above="@+id/watermarkLayout"
        android:layout_marginHorizontal="@dimen/onfido_button_horizontal_margin"
        app:onfidoButtonText="@string/onfido_outro_button_primary"/>
    <include layout="@layout/onfido_watermark_layout"/>
</RelativeLayout>
