<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.onfido.android.sdk.capture.validation.OnfidoCaptureValidationBubble
        android:id="@+id/captureValidationBubble"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/onfido_spacing_2x"
        android:layout_marginRight="@dimen/onfido_spacing_2x"
        android:layout_marginHorizontal="@dimen/onfido_spacing_2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:onfidoMode="postCapture"
        app:onfidoTightMode="@bool/onfido_validation_bubble_tight_mode"/>
    <TextView
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/onfido_spacing_2x"
        android:layout_marginRight="@dimen/onfido_spacing_2x"
        android:text="@string/onfido_selfie_confirmation_body"
        android:layout_marginHorizontal="@dimen/onfido_spacing_2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/OnfidoTextStyle.Body.Regular.Secondary"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/previewImageViewTopBarrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="captureValidationBubble,headerText"/>
    <ImageView
        android:id="@+id/previewImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/onfido_spacing_4x"
        android:layout_marginTop="@dimen/onfido_spacing_3x"
        android:layout_marginRight="@dimen/onfido_spacing_4x"
        android:layout_marginBottom="@dimen/onfido_spacing_4x"
        android:scaleType="fitCenter"
        android:contentDescription="@string/onfido_selfie_confirmation_image_accessibility"
        android:layout_marginHorizontal="@dimen/onfido_spacing_4x"
        app:layout_constraintBottom_toTopOf="@+id/previewImageViewBottomBarrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previewImageViewTopBarrier"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/previewImageViewBottomBarrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="uploadPhotoButton,forceRetakePhotoButton"/>
    <com.onfido.android.sdk.capture.ui.widget.OnfidoButton
        android:id="@+id/uploadPhotoButton"
        android:layout_marginBottom="@dimen/onfido_confirmation_buttons_middle_margin"
        app:layout_constraintBottom_toTopOf="@+id/retakePhotoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:onfidoButtonText="@string/onfido_selfie_confirmation_button_primary"
        style="@style/OnfidoFlatButton"/>
    <com.onfido.android.sdk.capture.ui.widget.OnfidoButton
        android:id="@+id/retakePhotoButton"
        android:layout_marginBottom="@dimen/onfido_spacing_1x"
        app:layout_constraintBottom_toTopOf="@+id/watermarkLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:onfidoButtonText="@string/onfido_selfie_confirmation_button_secondary"
        app:onfidoButtonType="secondary"
        style="@style/OnfidoFlatButton"/>
    <com.onfido.android.sdk.capture.ui.widget.OnfidoButton
        android:id="@+id/forceRetakePhotoButton"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/onfido_spacing_1x"
        app:layout_constraintBottom_toTopOf="@+id/watermarkLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:onfidoButtonText="@string/onfido_selfie_confirmation_button_secondary"
        app:onfidoButtonType="primary"
        style="@style/OnfidoFlatButton"/>
    <FrameLayout
        android:id="@+id/watermarkLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/onfido_watermark_bottom_margin"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.onfido.android.sdk.capture.ui.widget.WatermarkView
            android:id="@+id/watermark"
            style="@style/OnfidoWatermarkStyle"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
