<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/onfido_upload_container_padding"
    android:paddingRight="@dimen/onfido_upload_container_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/OnfidoCircularProgressIndicatorStyle"/>
    <TextView
        android:textSize="@dimen/onfido_upload_message_text_size"
        android:id="@+id/title"
        android:paddingTop="@dimen/onfido_upload_progress_dialog_top_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/OnfidoTextStyle.Body.Regular"/>
    <TextView
        android:textSize="@dimen/onfido_upload_message_text_size"
        android:id="@+id/subtitle"
        android:paddingTop="@dimen/onfido_upload_progress_dialog_top_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="@style/OnfidoTextStyle.Body.Regular.Secondary"/>
    <com.onfido.android.sdk.capture.ui.widget.WatermarkView
        android:id="@+id/watermark"
        android:layout_marginTop="@dimen/onfido_spacing_1x"
        android:layout_marginBottom="@dimen/onfido_watermark_bottom_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/OnfidoWatermarkStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
