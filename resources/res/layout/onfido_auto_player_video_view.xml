<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <com.onfido.android.sdk.capture.ui.camera.liveness.intro.error.LoadingErrorState
        android:layout_gravity="center"
        android:id="@+id/loadingErrorState"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.onfido.android.sdk.capture.ui.widget.LoadingView
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:onfidoText="@string/onfido_video_intro_loader"/>
    <TextureView
        android:layout_gravity="center"
        android:id="@+id/videoPlayer"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageButton
        android:layout_gravity="end|bottom"
        android:id="@+id/videoPlayButton"
        android:background="@color/onfido_transparent"
        android:visibility="gone"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="@dimen/onfido_ss_xsmall"
        android:contentDescription="@string/onfido_video_intro_button_pause_accessibility"
        android:importantForAccessibility="yes"
        android:layout_marginEnd="@dimen/onfido_ss_xsmall"
        app:srcCompat="@drawable/onfido_video_pause"/>
</FrameLayout>
