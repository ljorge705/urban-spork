<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextureView
        android:id="@+id/videoView"
        android:tag="@string/onfido_tag_main_content_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <ImageButton
        android:id="@+id/play"
        android:background="@color/onfido_transparent"
        android:clickable="false"
        android:layout_width="@dimen/onfido_video_view_play_button_dimens"
        android:layout_height="@dimen/onfido_video_view_play_button_dimens"
        android:layout_centerInParent="true"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/onfido_video_view_play_background"/>
</merge>
