<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:navigationContentDescription="@string/onfido_generic_back"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:theme="@style/OnfidoToolbarThemeOverlay"/>
    <com.onfido.android.sdk.capture.ui.widget.ShadowedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/reloadButton"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/onfido_message_screen_text_margin_horizontal"
            android:layout_marginEnd="@dimen/onfido_message_screen_text_margin_horizontal">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/onfido_liveness_challenges_error_view_icon_size"
                android:layout_height="@dimen/onfido_liveness_challenges_error_view_icon_size"
                android:layout_marginBottom="@dimen/onfido_liveness_challenges_error_view_icon_margin_bottom"
                android:alpha="0.8"
                app:srcCompat="@drawable/onfido_error_circle"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/onfido_liveness_challenges_error_view_title_margin_bottom"
                android:text="@string/onfido_video_capture_prompt_network_timeout_title"
                style="@style/OnfidoTextStyle.Title.Large"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onfido_video_capture_prompt_network_timeout_detail"
                style="@style/OnfidoTextStyle.Body.Regular"/>
        </LinearLayout>
    </com.onfido.android.sdk.capture.ui.widget.ShadowedScrollView>
    <include layout="@layout/onfido_watermark_layout"/>
    <com.onfido.android.sdk.capture.ui.widget.OnfidoButton
        android:id="@+id/reloadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/onfido_button_horizontal_margin"
        android:layout_marginRight="@dimen/onfido_button_horizontal_margin"
        android:layout_above="@+id/watermarkLayout"
        android:layout_marginHorizontal="@dimen/onfido_button_horizontal_margin"
        app:onfidoButtonText="@string/onfido_video_capture_prompt_button_primary_network_timeout"
        app:onfidoButtonType="secondary"/>
</RelativeLayout>
