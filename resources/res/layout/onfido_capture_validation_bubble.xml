<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/bubbleRoot"
    android:background="@drawable/onfido_capture_validation_bubble_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/bubbleIconBackground"
        android:background="@drawable/onfido_circle_validation_error"
        android:padding="@dimen/onfido_capture_validation_bubble_icon_padding"
        android:layout_width="@dimen/onfido_capture_validation_bubble_icon_background_size"
        android:layout_height="@dimen/onfido_capture_validation_bubble_icon_background_size"
        android:layout_marginTop="@dimen/onfido_capture_validation_bubble_icon_background_margin_vertical"
        android:layout_marginBottom="@dimen/onfido_capture_validation_bubble_icon_background_margin_vertical"
        android:layout_marginStart="@dimen/onfido_capture_validation_bubble_icon_background_margin_left">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/warningIcon"
            android:layout_width="@dimen/onfido_capture_validation_bubble_icon_size"
            android:layout_height="@dimen/onfido_capture_validation_bubble_icon_size"/>
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/onfido_capture_validation_bubble_text_margin">
        <TextView
            android:id="@+id/bubbleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="500"
            style="@style/OnfidoTextStyle.Subtitle.Medium.Inverse"/>
        <TextView
            android:id="@+id/bubbleSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/OnfidoTextStyle.Subtitle.Small.Inverse"/>
    </LinearLayout>
</LinearLayout>
