<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.onfido.android.sdk.capture.ui.widget.ShadowedScrollView
        android:id="@+id/userConsentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/OnfidoShadowedScrollStyle">
        <TextView
            android:id="@+id/userConsentTextView"
            android:paddingTop="@dimen/onfido_welcome_title_top_margin"
            android:paddingBottom="@dimen/onfido_activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/onfido_activity_horizontal_margin"
            android:layout_marginRight="@dimen/onfido_activity_horizontal_margin"
            android:layout_marginHorizontal="@dimen/onfido_activity_horizontal_margin"
            style="@style/OnfidoTextStyle.Body.Regular"/>
    </com.onfido.android.sdk.capture.ui.widget.ShadowedScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/userConsentFooterContainer"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/onfido_activity_horizontal_margin"
        android:layout_marginRight="@dimen/onfido_activity_horizontal_margin"
        android:layout_marginHorizontal="@dimen/onfido_activity_horizontal_margin">
        <com.onfido.android.sdk.capture.ui.widget.OnfidoButton
            android:id="@+id/userConsentAcceptButton"
            android:layout_marginBottom="@dimen/onfido_confirmation_buttons_middle_margin"
            app:onfidoButtonText="@string/onfido_user_consent_button_primary"
            app:onfidoButtonTextColor="@color/onfido_primary_button_text_color"
            style="@style/OnfidoFlatButton.NoMargin"/>
        <com.onfido.android.sdk.capture.ui.widget.OnfidoButton
            android:id="@+id/userConsentDoNotAcceptButton"
            app:onfidoButtonText="@string/onfido_user_consent_button_secondary"
            app:onfidoButtonTextColor="@color/onfido_secondary_button_text_color"
            app:onfidoButtonType="secondary"
            style="@style/OnfidoFlatButton.NoMargin"/>
        <include layout="@layout/onfido_watermark_layout"/>
    </LinearLayout>
</LinearLayout>
