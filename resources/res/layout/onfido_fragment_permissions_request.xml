<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/onfidoColorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.onfido.android.sdk.capture.ui.widget.ShadowedScrollView
        android:id="@+id/scrollView"
        android:paddingBottom="@dimen/onfido_shadowed_scroll_view_margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enable"
        android:layout_alignParentTop="true"
        style="@style/OnfidoShadowedScrollStyle">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/descriptionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/onfido_activity_horizontal_margin"
            android:layout_marginRight="@dimen/onfido_activity_horizontal_margin"
            android:layout_marginHorizontal="@dimen/onfido_activity_horizontal_margin">
            <TextView
                android:textStyle="bold"
                android:id="@+id/title"
                android:layout_marginTop="@dimen/onfido_permissions_request_title_margin_top"
                android:layout_marginBottom="@dimen/onfido_permissions_request_title_margin_bottom"
                android:accessibilityHeading="true"
                style="@style/OnfidoTextStyle.Title.Large"/>
            <TextView
                android:id="@+id/requestSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/onfido_permissions_request_subtitle_margin_bottom"
                style="@style/OnfidoTextStyle.Subtitle.Medium.Secondary"/>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/permissionRequestIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/onfido_permissions_request_icon_margin"/>
        </LinearLayout>
    </com.onfido.android.sdk.capture.ui.widget.ShadowedScrollView>
    <TextView
        android:id="@+id/requestDenyExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:drawablePadding="12dp"
        android:layout_above="@+id/enable"
        android:layout_marginHorizontal="16dp"
        app:drawableStartCompat="@drawable/onfido_ic_info_disclaimer"
        style="@style/OnfidoTextStyle.Body.Compact.Disclaimer"/>
    <include layout="@layout/onfido_watermark_layout"/>
    <com.onfido.android.sdk.capture.ui.widget.OnfidoButton
        android:id="@+id/enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/onfido_button_horizontal_margin"
        android:layout_marginRight="@dimen/onfido_button_horizontal_margin"
        android:layout_above="@+id/watermarkLayout"
        android:layout_marginHorizontal="@dimen/onfido_button_horizontal_margin"/>
</RelativeLayout>
